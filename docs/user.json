        "summary": "登录",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "required": true,
            "description": "用户",
            "schema": {
              "$ref": "#/definitions/UserLogin"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "正确返回",
            "examples": {
              "application/json": "{\n  \"id\": \"4\",\n  \"username\": \"test1\",\n  \"userType\": \"ABC\",\n  \"token\": \"eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJVc2VyIjp7IklEIjo0LCJVc2VyTmFtZSI6InRlc3QxIn0sImV4cCI6MTU1NzQ3MDYxMX0.JCR-qtbIFHZIgMsnoefPyB0oPkWueydCcMCHL5UWvzU\",\n  \"err\": null\n}"
