{
  "swagger": "2.0",
  "info": {
    "version": "0.0.1",
    "title": "user api"
  },
  "host": "127.0.0.1:8080",
  "schemes": [
    "http",
    "https"
  ],
  "paths": {
    "/user/login": {
      "post": {
        "operationId": "login",
        "summary": "登录",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "required": true,
            "description": "用户名",
            "schema": {
              "$ref": "#/definitions/UserLogin"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "正确返回",
            "examples": {
              "application/json": "{\n    \"data\": {\n        \"id\": \"102258\",\n        \"username\": \"test1\",\n        \"userType\": \"ABC\",\n        \"token\": \"eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJVc2VyIjp7IklEIjoxMDIyNTgsIlVzZXJOYW1lIjoidGVzdDEifSwiZXhwIjoxNTU3MzY4Njc5fQ.gI5Zihc_ZZC4v3eronIFL0pTUl7BitBlUjLoyTtZt4U\",\n        \"err\": null\n    }\n}"
            }
          },
          "400": {
            "description": "错误返回",
            "examples": {
              "application/json": "{\n    \"desc\": \"密码错误\",\n    \"err\": \"InvalidParamError\"\n}"
            }
          },
          "404": {
            "description": "错误返回",
            "examples": {
              "application/json": "{\n    \"desc\": \"用户不存在\",\n    \"err\": \"NotFoundError\"\n}"
            }
          }
        }
      }
    },
    "/user/getPermissions": {
      "get": {
        "operationId": "getPermissions",
        "summary": "获取用户权限列表以及用户菜单列表",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "required": true,
            "description": "Authorization",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "正确返回",
            "examples": {
              "application/json": "{\n  \"data\": {\n    \"menus\": [\n      {\n        \"id\": 4,\n        \"name\": \"后台设置\",\n        \"parent\": \"\",\n        \"route\": \"/\",\n        \"data\": \"{\\\"icon\\\": \\\"ic_htsz\\\", \\\"visible\\\": true}\",\n        \"order\": 10,\n        \"children\": [\n          {\n            \"id\": 5,\n            \"name\": \"路由管理\",\n            \"parent\": \"\",\n            \"route\": \"/admin/route/index\",\n            \"data\": \"{\\\"icon\\\": \\\"ic_luy\\\", \\\"visible\\\": true}\",\n            \"order\": 100,\n            \"children\": []\n          }\n        ]\n      }\n    ],\n    \"err\": null\n  }\n}"
            }
          },
          "500": {
            "description": "错误返回",
            "examples": {
              "application/json": "{\n    \"desc\": \"未知错误\",\n    \"err\": \"UnknownError\"\n}"
            }
          }
        }
      }
    },
    "/user/checkPermission": {
      "post": {
        "operationId": "checkPermission",
        "summary": "检查权限",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "required": true,
            "description": "Authorization",
            "type": "string"
          },
          {
            "name": "route",
            "in": "body",
            "required": true,
            "description": "路由",
            "schema": {
              "type": "object",
              "allOf": [
                {
                  "required": [
                    "route"
                  ],
                  "properties": {
                    "route": {
                      "type": "string"
                    }
                  }
                }
              ]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "正确返回",
            "examples": {
              "application/json": "{\n  \"data\": {\n    \"result\": false,\n    \"err\": null\n  }\n}"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "UserLogin": {
      "type": "object",
      "allOf": [
        {
          "required": [
            "username"
          ],
          "properties": {
            "username": {
              "type": "string"
            },
            "password": {
              "type": "string"
            }
          }
        }
      ]
    }
  }
}